<h1 align="center">Welcome, login to get started!</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |i| %>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <%= i.label :email %>
        </div>
        <div class="col-sm-8">
            <%= i.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <%= i.label :password %>
        </div>
        <div class="col-sm-8">
            <%= i.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= i.submit "Login", class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Back to articles", articles_path %> ]
</div>