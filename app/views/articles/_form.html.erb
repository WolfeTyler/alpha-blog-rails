<%= render "shared/errors", obj: @article %>

</br>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |i| %>
            <div class="form-group">
                <div class="col-sm-2 control-label">
                    <%= i.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= i.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 control-label">
                    <%= i.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= i.text_area :description, rows: 8, class: "form-control", placeholder: "Article Description" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= i.submit class: "btn btn-primary btn-lg"%>
                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Back to articles", articles_path %> ]
        </div>
    </div>
</div>

